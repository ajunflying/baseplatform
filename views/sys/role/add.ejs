<script type="text/javascript">

    function addRole() {
        var popup = new Popup();
        popup.title = '新增角色';
        popup.isShowBtnOk = true;
        popup.btnEvent = function () {
            var submit = function () {
                var obj = {
                    name: $('#roleName').val(),
                    desc: $('#roleDesc').val()
                };
                tool.post('/sys/role/add', obj, function (result) {
                    roleTable.refresh();
                    popup.close();
                    createMessageTip('添加成功');
                });
            };
            tool.jqueryValidate('formRoleInfo', submit, rules);
        };
        popup.run("templateInfo", initData({}));
    }

</script>